@model IEnumerable<Rain33.Models.Novice>

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<form asp-controller="Novices" asp-action="Index">
    <p>
        Title: <input type="text" name="SearchString">
        <input type="submit" value="Filter" />
    </p>
</form>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.datum)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.avtor)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.besedilo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Uporabniki)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.datum)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.avtor)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.besedilo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Uporabniki.UporabnikiId)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.NoviceId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.NoviceId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.NoviceId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
